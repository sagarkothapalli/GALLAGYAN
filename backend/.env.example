# GallaGyan Backend — Environment Variables
# Copy this file to .env and fill in real values. Never commit .env to git.

# JWT Secret Key — generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your-256-bit-hex-secret-key-here

# Comma-separated list of allowed CORS origins
ALLOWED_ORIGINS=https://gallagyan.xyz,https://www.gallagyan.xyz,http://localhost:3000

# Default user passcode (used only on first DB init — change immediately after)
DEFAULT_USER_PASSCODE=changeme_on_first_run
